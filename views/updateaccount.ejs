<%- include('header'); -%>
<div class="container">
  <h2>Thông tin tài khoản</h2>
  <form action="/staff/update?id=<%= account._id %>" method="POST">
    <div class="form-group">
      <label for="username">Tài khoản</label>
      <input type="text" class="form-control" id="username" name="username" value="<%= account.Username %>" readonly>
    </div>
    <div class="form-group">
      <label for="name">Tên</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= account.Name %>">
    </div>
    <div class="form-group">
      <label for="gender">Giới tính</label>
      <input type="gender" class="form-control" id="gender" name="gender" value="<%= account.Gender == true ? "Nữ" : "Nam" %>">
    </div>
    <div class="form-group">
      <label for="phone">Số điện thoại</label>
      <input type="text" class="form-control" id="phone" name="phone" value="<%= account.Phone %>">
    </div>
    <div class="form-group">
      <label for="newpassword">Mật khẩu mới (nếu thay đổi)</label>
      <input type="password" class="form-control" id="newpassword" placeholder="Nhập mật khẩu mới" name="newpassword" value="">
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
  </form>
</div>
<%- include('footer'); -%>