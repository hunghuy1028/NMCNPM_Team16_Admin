<%- include('header'); -%>
<div class="container">
  <h2>Thông tin tài khoản</h2>
  <form action="/staff/add" method="POST">
    <div class="form-group">
      <label for="username">Tài khoản</label>
      <input type="text" class="form-control" id="username" name="username" value="" required>
    </div>
    <div class="form-group">
      <label for="name">Tên</label>
      <input type="text" class="form-control" id="name" name="name" value="" required>
    </div>
    <div class="form-group">
      <label for="gender">Giới tính</label>
      <input type="gender" class="form-control" id="gender" name="gender" value="" required>
    </div>
    <div class="form-group">
      <label for="phone">Số điện thoại</label>
      <input type="text" class="form-control" id="phone" name="phone" value="" required>
    </div>
    <div class="form-group">
      <label for="password">Mật khẩu</label>
      <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu" name="password" value="" required>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
  </form>
</div>
<%- include('footer'); -%>