<%- include('header'); -%>
<div class="panel">
	<div class="panel-heading">
		<h3 class="panel-title">Quản lý ưu đãi</h3>
		<div class="right">
			<button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
			<button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
		</div>
	</div>
	<div class="panel-body no-padding">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>STT</th>
					<th>Phim</th>
					<th>Rạp</th>
					<th>Thời gian</th>
					<th>Số ghế hiện tại</th>
				</tr>
			</thead>
			<tbody>
				<% let count = 0; %>
				<% allShowtimes.forEach((show) => { %>
				<% count += 1; %>
				<% const date = show.DueDate %>
				<% const day = date.getDate(); %>
				<% const month = date.getMonth() + 1; %>
				<% const year = date.getFullYear(); %>
				<% console.log(day+'/'+month+'/'+year); %>
				<tr>
					<td><%= count %></td>
					<td><%= show.MoviesID %></td>
					<td><%= show.CinemaID %></td>
					<td><%= show.Time %></td>
					<td><%= day %>/<%= month %>/<%= year %></td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
	<div class="panel-footer">
		<div class="row">
			<div class="col-md-6"><span class="panel-note"><i class="fa fa-clock-o"></i></span></div>
			<div class="col-md-6 text-right"><a href="/sales/add" class="btn btn-primary">Thêm ưu đãi</a></div>
		</div>
	</div>
</div>
<%- include('footer'); -%>